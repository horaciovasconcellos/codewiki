# CodeWiki Editor Configuration

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Markdown files MUST be in docs/ folder (except README.md)
# See docs/PROJECT-CONVENTIONS.md for details
